<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   android:background="@drawable/login_arkaplan"
    tools:context=".ui.fragment.KayitGirisFragment">

    <!-- E-posta EditText -->

    <!-- Parola EditText -->

    <!-- CheckBox -->

    <!-- "Üye Ol" Butonu -->

    <EditText
        android:id="@+id/kayitMail"
        android:layout_width="343dp"
        android:layout_height="45dp"
        android:layout_marginTop="256dp"
        android:background="@drawable/edittextarkaplan"
        android:drawableLeft="@drawable/kullanici_adi"
        android:hint=" Kullanıcı Adı"
        android:inputType="textEmailAddress"
        android:padding="10dp"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/kayitParola"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:background="@drawable/edittextarkaplan"
        android:drawableLeft="@drawable/sifre_giris"
        android:hint="  Parola"
        android:inputType="textPassword"
        android:padding="10dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/kayitMail"
        app:layout_constraintHorizontal_bias="0.4"
        app:layout_constraintStart_toStartOf="@+id/kayitMail"
        app:layout_constraintTop_toBottomOf="@id/kayitMail" />

    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Yeniliklerden haberdar olmak için elektronik iletiye izin veriyorum"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextNumberPassword" />

    <Button
        android:id="@+id/kayitGiris"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/buttonarkaplan"
        android:text="Üye Ol"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/checkBox" />

    <!-- "Girişe Dön" Butonu -->
    <Button
        android:id="@+id/kayitGiris2"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/buttonarkaplan"
        android:text="Girişe Dön"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/kayitGiris" />

    <EditText
        android:id="@+id/editTextNumberPassword"
        android:layout_width="347dp"
        android:layout_height="44dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/edittextarkaplan"
        android:drawableLeft="@drawable/iletisim"
        android:ems="10"
        android:hint=" 053* *** ** **"
        android:inputType="numberPassword"
        app:layout_constraintEnd_toEndOf="@+id/kayitParola"
        app:layout_constraintStart_toStartOf="@+id/kayitParola"
        app:layout_constraintTop_toBottomOf="@+id/kayitParola" />

</androidx.constraintlayout.widget.ConstraintLayout>
